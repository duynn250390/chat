<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <title>Bài 1 - Docket IO</title>
</head>

<body>
    <aside class="warrap">
        <section class="regis_mem" id="regis_mem">
            <div class="heading">Form register Chat</div>
            <div class="form_regis">
                <input type="text" class="input_message" id="input_message" placeholder="Nhập họ tên.." />
                <button class="btn_regis">Đăng ký</button>
            </div>
        </section>
        <div class="box_chat">
            <div class="person_list">
                <div class="hello_mem">
                    <form action="" class="hello_mem_form">
                        <div class="name_hello">Xin chào <span>Nam</span></div>
                        <button class="btn_logout">Đăng xuất</button>
                    </form>
                </div>
                <ul id="list_mem">
                    <li>Nam</li>
                    <li>Quân</li>
                </ul>
            </div>

            <div class="box_conent_chat">
                <div class="content_chat">
                    <ul id="messages"></ul>
                </div>
                <div class="typing_now">
                    <!-- <div class="now-typing"></div> -->
                </div>
                <div class="control_input">
                    <input class="mes" id="mes" autocomplete="of" />
                    <!-- <button class="action_messa">Send</button> -->
                </div>
            </div>
        </div>
    </aside>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="js/jquery.js"></script>
<script src="js/handles.js"></script>

</html>